[
  {
    "context": "Editor",
    "bindings": {
      "alt-i": "editor::SelectLargerSyntaxNode",
      "alt-u": "editor::SelectSmallerSyntaxNode",
      "alt-k": "editor::MoveLineUp",
      "alt-j": "editor::MoveLineDown"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w t": "terminal_panel::ToggleFocus",
      "ctrl-w z": "workspace::ToggleZoom",
      "g r": "editor::FindAllReferences",
      "g y": "editor::GoToTypeDefinition",
      "space l a": "editor::ToggleCodeActions",
      "space l d": "diagnostics::Deploy",
      "space l f": "editor::Format",
      "space l r": "editor::Rename",
      "space l v": "editor::GoToDefinitionSplit",
      "space l y": "editor::GoToTypeDefinitionSplit"
    }
  },
  {
    "context": "Editor && vim_mode == insert && !menu",
    "bindings": {
      "k j": "vim::NormalBefore"
    }
  },
  {
    "context": "EmptyPane || SharedScreen || vim_operator == none && !VimWaiting && vim_mode != insert",
    "bindings": {
      "space f b": "tab_switcher::Toggle",
      "space f f": "file_finder::Toggle",
      "space f o": "projects::OpenRecent",
      "space t t": "task::Rerun",
      "space t r": ["task::Rerun", { "reevaluate_context": true }]
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-u": "terminal::Clear",
      "ctrl-w t": "terminal_panel::ToggleFocus",
      "ctrl-w z": "workspace::ToggleZoom"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"]
    }
  }
]
