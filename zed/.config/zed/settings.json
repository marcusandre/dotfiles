{
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "cursor_blink": false,
  "inlay_hints": { "enabled": false },
  "scrollbar": { "show": "never" },
  "terminal": { "blinking": "on" },
  "theme": {
    "mode": "system",
    "dark": "Carbonfox",
    "light": "Duskfox"
  },
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 13,
  "vim_mode": true,
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80
    },
    "JavaScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TSX": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    }
  }
}
