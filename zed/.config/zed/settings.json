{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "cursor_blink": false,
  "inlay_hints": { "enabled": true },
  "scrollbar": { "show": "never" },
  "theme": {
    "mode": "system",
    "dark": "Tokyo Night Storm",
    "light": "Tokyo Night Light"
  },
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 13,
  "vim_mode": true,
  "terminal": {
    "blinking": "on",
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80
    },
    "JavaScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TSX": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      }
    }
  }
}
