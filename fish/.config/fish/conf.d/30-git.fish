if type -q git
    abbr -a d "git diff --stat"
    abbr -a g git
    abbr -a ga "git add"
    abbr -a ga. "git add ."
    abbr -a gap "git add --patch"
    abbr -a gb "git branch"
    abbr -a gc "git commit"
    abbr -a gd "git diff"
    abbr -a gl "git ll"
    abbr -a gp "git push"
    abbr -a gr "cd (git_root)"
    abbr -a gss "git status"
    abbr -a gsw "git switch"
    abbr -a gu "git upgrade"
    abbr -a s "git status --short"
end
