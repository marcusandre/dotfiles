# vi: ft=gitconfig
[includeIf "gitdir:~/src/projects/"]
  path = ~/.config/git/config-projects/

[includeIf "gitdir:~/src/work/"]
  path = ~/.config/git/config-work/

[core]
  excludesfile = ~/.config/git/ignore

[commit]
  push = current
  verbose = true
  gpgSign = true

[diff]
  algorithm = histogram
  colorMoved = default
  compactionHeuristic = true

[log]
  date = local

[push]
  default = current
  autoSetupRemote = true

[pull]
  rebase = true
  twohead = ort

[rebase]
  autosquash = true

[merge]
  conflictstyle = zdiff3

[rerere]
  enabled = true

[column]
  ui = auto

[branch]
  sort = -committerdate

[init]
  defaultBranch = main

[tag]
  gpgSign = true

[gpg]
  format = ssh

[credential]
  helper = osxkeychain
