# vi: ft=gitconfig
[includeIf "gitdir:~/src/projects/"]
  path = ~/.config/git/config-projects/

[includeIf "gitdir:~/src/work/"]
  path = ~/.config/git/config-work/

[alias]
  famend = commit --amend --no-edit --no-verify
  git = "!git"
  main-branch = "!git remote show origin | sed -n '/HEAD branch/s/.*: //p'"
  forget = !"git checkout -- .; git clean -fd"
  overwrite = push origin HEAD --force-with-lease
  rb = "!sh -c \"git rebase -i HEAD~$1\" -"
  root = rev-parse --show-toplevel
  squash = "!git rebase -v -i $(git main-branch)"
  sync = "!git fetch --prune && git rebase origin/$(git main-branch)"
  undo = !"git reset --soft \"HEAD^\" && git diff --stat"
  wip = !"git add . && git commit -n -m \"wip\""

[core]
  excludesfile = ~/.config/git/ignore

[commit]
  push = current
  verbose = true
  gpgSign = true

[diff]
  algorithm = histogram
  colorMoved = default
  compactionHeuristic = true

[log]
  date = local

[push]
  default = current
  autoSetupRemote = true

[pull]
  rebase = true
  twohead = ort

[rebase]
  autosquash = true

[merge]
  conflictstyle = zdiff3

[rerere]
  enabled = true

[column]
  ui = auto

[branch]
  sort = -committerdate

[init]
  defaultBranch = main

[tag]
  gpgSign = true

[gpg]
  format = ssh

[credential]
  helper = osxkeychain
