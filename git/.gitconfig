[user]
  email = hello@marcusandre.de
  name = Marcus Andr√©
[core]
  abbrev = 12
  autocrlf = input
  excludesfile = '~/.gitignore_global'
[alias]
  append = commit -a --amend -C HEAD
  br = branch
  branches = branch -a --color -v
  cached = diff --cached
  discard = reset --hard HEAD
  ds = !git diff | diffstat -C
  hash = rev-parse --short HEAD
  l = log --pretty=oneline --abbrev-commit --graph --decorate
  ll = log --pretty=format:'%C(yellow)%h%C(cyan)%d%C(reset) %s %C(green)(%ar) %C(blue)<%an>%C(reset)' --graph --decorate
  nevermind = !git reset --hard HEAD && git clean -d -f
  prevent = update-index --assume-unchanged
  root = rev-parse --show-toplevel
  s = status -sb
  st = status
  today = log --since=midnight --oneline --no-merges
  today-fs = log --since=midnight --no-merges --name-only
  track = checkout -t
  unmerged = ls-files --unmerged
  unpush = push -f origin HEAD^:master
  unstage = reset -q HEAD --
  upgrade = !git fetch origin --prune && git rebase origin/master
  yesterday = diff --name-only --stat @{1.days.ago}
[diff]
  tool = vimdiff
[pull]
  rebase = true
[log]
  date = iso
  abbrevCommit = true
[advice]
  statusHints = false
[credential]
  helper = osxkeychain
[github]
  user = marcusandre
[color]
  pager = true
  ui = auto
  status = auto
  diff = auto
  branch = auto
  showBranch = auto
  interactive = auto
  grep = auto
[color "status"]
  header = black bold
  branch = cyan
  nobranch = red
  unmerged = red
  untracked = cyan
  added = green
  changed = red bold
[color "diff"]
  meta = red bold
  frag = black bold
  func = blue
  old = red strike
  new = green
  commit = blue
  whitespace = red
  context = normal
[color "branch"]
  current = cyan
  local = blue
  remote = magenta
  upstream = magenta
  plain = normal
[color "decorate"]
  branch = blue
  remoteBranch = magenta
  tag = magenta
  stash = cyan
  HEAD = blue
[color "interactive"]
  prompt = red
  header = red bold
  error = red
  help = black bold
[color "grep"]
  context = normal
  match = cyan
  filename = blue
  function = blue
  selected = normal
  separator = red bold
  linenumber = normal
