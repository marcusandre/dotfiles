  name = Marcus Andr√©

[alias]
  git = "!git"

  mainbranch = "!git remote show origin | sed -n '/HEAD branch/s/.*: //p'"
  sync = "!git pull origin $(git mainbranch) --rebase"
  update = "!git pull origin $(git rev-parse --abbrev-ref HEAD) --rebase"
  squash = "!git rebase -v -i $(git mainbranch)"
  publish = push origin HEAD --force-with-lease
  todo = git grep -niE '(FIXME|TODO)'
  fixme = git grep -niE '(FIXME|TODO)'

  # The basic aliases
  s = status
  cm = commit -m
  root = rev-parse --show-toplevel
  hash = log -1 --format='%H'
  back = checkout -

  # Branch related aliases
  br = branch -a
  co = checkout
  com = checkout master

  # Rebase related aliases
  ri = rebase -i
  rb = "!sh -c \"git rebase -i HEAD~$1\" -"
  rc = rebase --continue
  ra = rebase --abort
  rs = rebase --skip
  re = rebase --exit

  # Commit related aliases
  wip = !"git add . && git commit -n -m \"WIP\""
  amend = commit --amend --no-edit
  famend = commit --amend --no-edit --no-verify

  # Mistake related aliases
  nono = checkout -- .
  wait = reset HEAD
  undo = !"git reset --soft \"HEAD^\" && git status --short"

  # Diff related aliases
  changes = diff --name-status
  l = log --graph --decorate --pretty=oneline --abbrev-commit
  ll = log --pretty=format:'%C(yellow)%h%C(cyan)%d%C(reset) %s %C(green)(%ar) %C(blue)<%an>%C(reset)' --graph --decorate

[commit]
  template = ~/.gittemplate
  verbose = true
  push = current

[push]
  default = current
  autoSetupRemote = true

[diff]
  colorMoved = default

[rebase]
  autosquash = true

[add.interactive]
  useBuiltin = false

[merge]
  conflictstyle = diff3

[credential]
  helper = osxkeychain

[init]
  defaultBranch = main

[rerere]
  enabled = true
