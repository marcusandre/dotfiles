#!/usr/bin/env bash

set -e

TARGET=~/.vim/autoload/plug.vim
URL=https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
VIMPROC=~/.vim/plugged/vimproc.vim

if [ ! -f "$TARGET" ]; then
  curl -fLo $TARGET --create-dirs $URL
  ln -sf ~/.vim ~/.nvim
  vim +PlugInstall +qall
  cd $VIMPROC && make
else
  vim +PlugUpgrade +PlugUpdate +PlugClean +qall
fi
