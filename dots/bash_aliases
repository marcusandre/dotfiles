# Navigation
alias ..="cd .."

# Directory Listings
alias ls="ls -GFh"
alias la="ls -la"
alias ls1="ls -1"

# Misc
alias sudo="sudo "
alias week="date +%V"
alias rf="rm -rf"
alias mounts="mount | column -t"
alias m="make "
alias t="make test"
alias s="subl -n ."
alias n="node ."
alias irc="irssi -n meggesje -c irc.freenode.net"
alias "npmeu"="npm --registry http://registry.npmjs.eu"
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | printf '=> Public key copied to pasteboard.\n'"
alias colors="printf \"\e[%dm%d dark\e[0m  \e[%d;1m%d bold\e[0m\n\" {30..37}{,,,}"
alias topram="ps aux |tail -n+2 |sort -nrk4 |head -$(($(tput lines)-1)) |cut -c 1-$(tput cols)"
alias hosts="sudo vim /private/etc/hosts"

# Git aliases
# Thanks to TJ Holowaychuk
alias gl="git log --pretty=oneline --abbrev-commit --graph --decorate"
alias gd="git diff"
alias ga="git add"
alias gbd="git branch -D"
alias gst="git status"
alias gca="git commit -a -m"
alias gm="git merge --no-ff"
alias gpt="git push --tags"
alias gpa="git push --all"
alias gp="git push"
alias grh="git reset --hard"
alias gb="git branch"
alias gcob="git checkout -b"
alias gco="git checkout"
alias gba="git branch -a"
alias gpom="git pull origin master"
alias gr2="git rebase -i HEAD~2"
alias gr3="git rebase -i HEAD~3"

# Vagrant aliases
alias vup="vagrant up"
alias vha="vagrant halt"
alias vst="vagrant status"
alias vdf="vagrant destroy -f"

# cd into new directory
function take {
  mkdir -p "$@" && cd "$_";
}

# serve tree via http
function serve {
  python -m SimpleHTTPServer
}

# this is the most important alias ever.
function fliptable {
  echo "（╯°□°）╯ ┻━┻";
}

function publish {
  git push --tags && git push
}
