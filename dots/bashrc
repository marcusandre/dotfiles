# Prefix Path
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

if [ -d ~/bin ]; then
  export PATH=~/bin:$PATH
fi

# History settings
export HISTCONTROL=ignoredups
export HISTFILESIZE=10000
export HISTSIZE=10000
export HISTIGNORE="ls:ls *:cd:cd -:pwd:exit:date:clear:* --help"
export MANPAGER="less -X"
export PROMPT_COMMAND="history -a; $PROMPT_COMMAND"

# Shell settings
shopt -s cdspell
shopt -s checkwinsize
shopt -s histappend
shopt -s nocaseglob

# notify of background job completion
set -o notify

# skip this stupid mail check
unset MAILCHECK

# default umask
umask 0022

# Input settings
set completion-ignore-case on
set show-all-if-ambiguous on

# Misc settings
complete -cf sudo
export PAGER="most"

# Hail to the Vim, Baby
export EDITOR=vim

# Homebrew Bash completion
if [ -f $(brew --prefix)/etc/bash_completion ]; then
  . $(brew --prefix)/etc/bash_completion
fi

# Call the prompt
if [ -f ~/.bash_prompt ]; then
  source ~/.bash_prompt
fi

# Call the aliases
if [ -f ~/.bash_aliases ]; then
  source ~/.bash_aliases
fi

# Set NODE_ENV
export NODE_ENV="development"

# Source bash_completion manualy if it's exist
# There are companies where you don't get admin rights. :(
[ -s $HOME/bin/git-completion.bash ] && source $HOME/bin/git-completion.bash

# Init z
. `brew --prefix`/etc/profile.d/z.sh

# Init nvm
source $(brew --prefix nvm)/nvm.sh

# Setup Go
export GOPATH=$HOME/.go
export PATH=$PATH:$GOPATH/bin
